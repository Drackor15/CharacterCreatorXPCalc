<Window x:Class="EdArcCharacterCreatorXPCalc.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EdArcCharacterCreatorXPCalc.View"
        xmlns:model="clr-namespace:EdArcCharacterCreatorXPCalc.Model"
        xmlns:viewmodel="clr-namespace:EdArcCharacterCreatorXPCalc.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
        mc:Ignorable="d"
        Title="XP Calculator - EdArc 1e" Height="450" Width="800" MinHeight="300" MinWidth="400">

    <!-- Window UI -->
    <DockPanel>

        <!-- Application Ribbon -->
        <ToolBarTray Background="WhiteSmoke" DockPanel.Dock="Top">
            <ToolBar Band="1" BandIndex="1" Background="WhiteSmoke">
                
                <Button Height="31" Width="31" ToolTip="Save Library">
                    <!-- bind to a command -->
                    <Image Source="UIImages/Icon_Save.png" Height="25" Width="25"></Image>
                </Button>

                <Menu Height="31" Width="31" ToolTip="New Character">
                    <MenuItem Height="31" Width="31">
                        <MenuItem.Icon>
                            <Image Source="UIImages/add.png" MinHeight="15" MinWidth="15"/>
                        </MenuItem.Icon>
                        <MenuItem Header="Lvl 0"/>
                        <MenuItem Header="Lvl 1"/>
                        <MenuItem Header="Lvl 2"/>
                        <MenuItem Header="Lvl 3"/>
                        <MenuItem Header="Lvl 4"/>
                        <MenuItem Header="Lvl 5"/>
                        <MenuItem Header="Lvl 6"/>
                    </MenuItem>
                </Menu>
                
                <!--<Button Command="{Binding Path=DisplayAddCharacter}">
                    <Image Source="UIImages/add.png"></Image>
                    <Button.ContextMenu>
                        <ContextMenu IsOpen="{Binding Path=IsDisplayAddCharacter}">
                            <MenuItem Header="Lvl 0" />
                            <MenuItem Header="Lvl 1"/>
                            <MenuItem Header="Lvl 2"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>-->
            </ToolBar>
        </ToolBarTray>

        <!-- Character Display -->
        <Grid>
            <!-- Grid Layout -->
            <Grid.RowDefinitions>
                <RowDefinition  />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition  />
            </Grid.ColumnDefinitions>

            <!-- Wrap Panel Bound to Character Library -->
            <ScrollViewer Grid.Row="1">
                <ItemsControl Grid.Row="2" ItemsSource="{Binding Path=CharacterLibrary}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <!-- Custom Display for each instance of the Person Data Type -->
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type model:Character}">
                            <Grid>
                                <Border BorderBrush="AntiqueWhite" Background="AntiqueWhite" Height="30" Width="100" CornerRadius="7" >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <ContentPresenter Grid.Column="0" Content="{Binding Path=Name}" VerticalAlignment="Center"></ContentPresenter>
                                        <ContentPresenter Grid.Column="1" Content="{Binding Path=Description}" VerticalAlignment="Center" HorizontalAlignment="Right"></ContentPresenter>
                                    </Grid>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

        </Grid>
    </DockPanel>


</Window>
