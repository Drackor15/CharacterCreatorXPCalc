						</MenuItem.Header>
						
						<MenuItem  Header="Lvl 0" Command="{Binding Path=AddCharacterCommand}">
							<MenuItem.Resources>
								<Style TargetType="Border">
									<Setter Property="CornerRadius" Value="7"/>
								</Style>
							</MenuItem.Resources>
							
